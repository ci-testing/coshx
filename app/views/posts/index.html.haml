.all-posts
  - y = 0
  
  .row
    .four.columns
    .eight.columns
      - @posts.each do |p|
        - year = (p.posted_on.strftime("%Y").present? ? p.posted_on.strftime("%Y") : p.created_at.strftime("%Y"))
        - if y != year
          ="</div></div>".html_safe
          ="<div class='row'>".html_safe
          ="<div class='four columns'>".html_safe
          .year=year
          ="</div><div class='eight columns'>".html_safe
        - y = year
        - link_text = p.title + " / " 
        =link_to link_text.html_safe, p
        
    
    


  = paginate @posts
  
  
  
 
