%h3
  -if preview
    =link_to post.title, post
  -else
    =post.title
.post-info-wrapper
  .post-author-image=image_tag Gravatar.new(post.author.email).image_url(:size => '50')
  .post-info
    =post.author.name
    - if post.published?
      %em=post.posted_on.strftime("%B %e, %Y")
    - else
      %em="Draft"
- if preview
  .post-body=preserve truncate(post.body_html.html_safe, :length => 310)
- else
  .post-body=preserve post.body_html.html_safe